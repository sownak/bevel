{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "global": {
      "description": "Global common parameters",
      "properties": {
        "vault": {
          "description": "Vault parameters",
          "properties": {
            "secretPrefix": {
              "type": "string",
              "pattern": "data/*"
            },
            "secretEngine": {
              "type": "string"
            }
          },
          "required": ["secretEngine", "secretPrefix"]
        }
      }
    }
  }
}
